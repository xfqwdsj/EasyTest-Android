<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <com.takisoft.preferencex.PreferenceCategory android:title="@string/general">
        <EditTextPreference
            android:key="custom_source"
            android:summary="@string/one_per_line"
            android:title="@string/custom_source" />
    </com.takisoft.preferencex.PreferenceCategory>

    <com.takisoft.preferencex.PreferenceCategory android:title="@string/theme">
        <xyz.xfqlittlefan.easytest.util.ThemeColorPreference
            android:defaultValue=""
            android:dialogTitle="@string/theme_color"
            android:key="theme_color"
            android:summary="@string/theme_color_summary"
            android:title="@string/theme_color" />
        <rikka.preference.SimpleMenuPreference
            android:defaultValue="MODE_NIGHT_FOLLOW_SYSTEM"
            android:entries="@array/theme_texts"
            android:entryValues="@array/theme_values"
            android:key="dark_theme"
            android:summary="%s"
            android:title="@string/dark_theme" />
        <SwitchPreference
            android:key="enable_blur"
            android:summary="@string/enable_blur_summary"
            android:title="@string/enable_blur" />
    </com.takisoft.preferencex.PreferenceCategory>

    <com.takisoft.preferencex.PreferenceCategory android:title="@string/test" >
        <SwitchPreference
            android:key="enable_landscape"
            android:summary="@string/landscape_mode_summary"
            android:title="@string/landscape_mode" />
    </com.takisoft.preferencex.PreferenceCategory>
</PreferenceScreen>
